@model SaleEntry
@{
    ViewData["Title"] = "CreateSale";
}

<h5 class="mt-3 text-center">Sales Entry</h5>

<section class="bg-light mt-3 px-5 py-3">

    <div class="row">
        <div class="col-6">
            <div class="form-group">
                <label class="control-label">Sales ID</label>
                <input class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Purchase ID</label>
                <input class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label d-flex">Branch Code</label>
                <select class="form-select" aria-label="Default select example">
                    <option selected>001</option>
                    <option value="1">002</option>
                    <option value="2">003</option>
                </select>
            </div>
            <div class="form-group">
                <label class="control-label d-flex">Company Code</label>
                <select class="form-select" aria-label="Default select example">
                    <option selected>001</option>
                    <option value="1">002</option>
                    <option value="2">003</option>
                </select>
            </div>
            <a class="btn btn-primary">Add</a>
            <div class="form-group">
                <label for="exampleFormControlFile1">Invoice</label>
                <input type="file" class="form-control-file px-2 py-5" id="exampleFormControlFile1">
            </div>
            <div class="form-group">
                <label class="control-label">Entry Date</label>
                <input class="form-control" />
            </div>
        </div>
    </div>
    <div class="row my-3">
        <div class="col-12 d-inline-flex justify-content-between">
            <div class="form-group col-2">
                <label class="control-label">Asset Type</label>
                <select class="form-select" aria-label="Default select example">
                    <option selected>001</option>
                    <option value="1">002</option>
                    <option value="2">003</option>
                </select>
            </div>
            <div class="form-group mx-2 col-2">
                <label class="control-label">Asset Section Type</label>
                <select class="form-select" aria-label="Default select example">
                    <option selected>001</option>
                    <option value="1">002</option>
                    <option value="2">003</option>
                </select>
            </div>
            <div class="form-group col-2">
                <label class="control-label">Asset Sub Section Type</label>
                <select class="form-select" aria-label="Default select example">
                    <option selected>001</option>
                    <option value="1">002</option>
                    <option value="2">003</option>
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Solid Item</label>
                <input class="form-control" />
            </div>
            <div class="form-group mx-2 col-2">
                <label class="control-label">Quantity</label>
                <input class="form-control" />
            </div>
            <div class="mx-2">
                <a class="btn btn-primary">Add</a>
            </div>
        </div>
    </div>

    <h5 class="mt-3">Sales Bill</h5>

    <div class="row">
        <div class="col-6">
            <div class="form-group">
                <label class="control-label">Company Name</label>
                <input class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Bill Number</label>
                <input class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Bill Date</label>
                <input class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Product Description</label>
                <input class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Depreciation Value</label>
                <input class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">After Depreciation</label>
                <input class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Sale Amount</label>
                <input class="form-control" />
            </div>
        </div>
    </div>
    <div class="mt-3">
        <div class="d-inline-flex justify-content-center">
            <a asp-action="ViewSales" class="btn btn-primary">Save</a>
            <a asp-controller="Dashboard" asp-action="Dashboard" class="btn btn-primary mx-3">Cancel</a>
        </div>
    </div>
</section>