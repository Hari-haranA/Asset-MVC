@model Vendor

@{
    ViewData["Title"] = "CreateVendor";
}

<h5 class="mt-3 text-center">Create Vendor</h5>

<section class="bg-light mt-3 px-5 py-5">

    <div class="row">
        <div class="col-6">
            <div class="form-group">
                <label class="control-label">VendorCode</label>
                <input asp-for="VendorCode" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">VName</label>
                <input asp-for="VName" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">PersonName</label>
                <input asp-for="PersonName" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">MobileNo</label>
                <input asp-for="MobileNo" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">PhoneNo</label>
                <input asp-for="PhoneNo" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">VAddress</label>
                <input asp-for="VAddress" class="form-control" />
            </div>
        </div>

        <div class="col-6">
            <div class="form-group">
                <label class="control-label">City</label>
                <input asp-for="City" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">State</label>
                <input asp-for="State" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">GSTNo</label>
                <input asp-for="GSTNo" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">PANNo</label>
                <input asp-for="PANNo" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">TINNo</label>
                <input asp-for="TINNo" class="form-control" />
            </div>
        </div>
    </div>
    <section class="d-flex mt-3 justify-content-center">
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
        <div class="form-group">
            <a asp-controller="Dashboard" asp-action="Dashboard" class="btn btn-primary mx-3">Cancel</a>
        </div>

    </section>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
