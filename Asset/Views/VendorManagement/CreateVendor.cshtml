@model Vendor

@{
    ViewData["Title"] = "CreateVendor";
}

<h5 class="mt-3 text-center">Create Vendor</h5>
<form asp-action="CreateVendor">
<section class="bg-light mt-3 px-5 py-5">
    <div class="row">
         <div class="col-6">
           @* <div class="form-group">
                <label class="control-label">Vendor Code</label>
                <input asp-for="VendorCode" class="form-control" />
            </div> *@
            <div class="form-group">
                <label class="control-label">Company Name</label>
                <input type="text" asp-for="VName" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Person Name</label>
                <input type="text" asp-for="Person_Name" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Mobile Number</label>
                <input type="number" asp-for="Mobile_No" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Phone Number</label>
                <input type="number" asp-for="Phone_No" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Company Address</label>
                <input type="text" asp-for="VAddress" class="form-control" />
            </div>
        </div>

        <div class="col-6">
            <div class="form-group">
                <label class="control-label">City</label>
                <input type="text" asp-for="City" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">State</label>
                <input type="text" asp-for="State" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">GST Number</label>
                <input type="text" asp-for="GST_No" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">PAN Number</label>
                <input type="text" asp-for="PAN_No" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">TIN Number</label>
                <input type="text" asp-for="TIN_No" class="form-control" />
            </div>
        </div></div>
    <section class="d-flex mt-3 justify-content-center">
        <div class="form-group">
            <button type="submit" class="btn btn-success">Submit</button>
        </div>
        <div class="form-group">
            <a asp-controller="Dashboard" asp-action="Dashboard" class="btn btn-danger mx-3">Cancel</a>
        </div>
    </section>
</section>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
