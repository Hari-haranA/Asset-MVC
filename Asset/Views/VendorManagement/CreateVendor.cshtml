@model Vendor

@{
    ViewData["Title"] = "CreateVendor";
}

<h5 class="mt-3 text-center">CreateVendor</h5>

<section class="bg-light mt-3 px-5 py-5">

    <div class="row">
        <div class="col-6">
            <div class="form-group">
                <label asp-for="VendorCode" class="control-label"></label>
                <input asp-for="VendorCode" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="VName" class="control-label"></label>
                <input asp-for="VName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="PersonName" class="control-label"></label>
                <input asp-for="PersonName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="MobileNo" class="control-label"></label>
                <input asp-for="MobileNo" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="PhoneNo" class="control-label"></label>
                <input asp-for="PhoneNo" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="VAddress" class="control-label"></label>
                <input asp-for="VAddress" class="form-control" />
            </div>
        </div>

        <div class="col-6">
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="State" class="control-label"></label>
                <input asp-for="State" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="GSTNo" class="control-label"></label>
                <input asp-for="GSTNo" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="PANNo" class="control-label"></label>
                <input asp-for="PANNo" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="TINNo" class="control-label"></label>
                <input asp-for="TINNo" class="form-control" />
            </div>
        </div>
    </div>
    <section class="d-flex mt-3 justify-content-center">
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
        <div class="form-group">
            <input type="submit" asp-controller="VendorManagement" asp-action="Dashboard" value="Cancel" class="btn btn-primary mx-3" />
        </div>

    </section>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
