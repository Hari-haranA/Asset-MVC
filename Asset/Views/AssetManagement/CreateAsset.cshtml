<h5 class="text-center p-3">Asset Creation</h5>
<section>
   <a asp-controller="AssetManagement" asp-action="CreateAsset"><div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="Asset">
        <label class="form-check-label" for="inlineRadio1"><b>Asset Type</b></label>
    </div></a>
    <a asp-controller="AssetManagement" asp-action="CreateSection"><div class="form-check px-3 form-check-inline">
        <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="Asset">
        <label class="form-check-label" for="inlineRadio2"><b>Asset Section Type</b></label>
    </div></a>
    <a asp-controller="AssetManagement" asp-action="CreateSubSection"><div class="form-check px-3 form-check-inline">
        <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="Asset">
        <label class="form-check-label" for="inlineRadio2"><b>Asset Sub Section Type</b></label>
    </div></a>
</section>

<section class="container-fluid bg-light mt-3 py-5">
    <p class="px-2"><b>Asset Type</b></p>
    <div class="row">
        <div class="col-6">
            <div class="form-group">
                <label class="control-label d-flex">Asset Code</label>
                <input class="form-control"/>
            </div>

            <div class="form-group">
                <label class="control-label d-flex">Asset Name</label>
                <input class="form-control"/>
            </div>

            <div class="form-group">
                <label class="control-label d-flex">Depreciation (%)</label>
                <input class="form-control" />
            </div>
            </div></div>

            <p class="py-2"><b>Asset Section Type</b></p>
            <div class="row">
              <div class="col-6">
            <div class="form-group">
                <label class="control-label d-flex">Section Code</label>
                <input class="form-control" />
            </div>

            <div class="form-group">
                <label class="control-label d-flex">Section Name</label>
                <input class="form-control" />
            </div>
        </div>
            </div>

            <p class="py-2"><b>Asset Sub Section Type</b></p>
            <div class="row">
                <div class="col-6">
            <div class="form-group">
                <label class="control-label d-flex">Sub Section Code</label>
                <input class="form-control" />
            </div>

            <div class="form-group">
                <label class="control-label d-flex">Sub Section Name</label>
                <input class="form-control" />
            </div>
        </div>
    </div> 
    <div class="d-inline-flex mt-3 justify-content-center">
    <button class="btn btn-primary" type="submit">Save</button>
    <button class="btn btn-primary mx-3" type="submit">Cancel</button>
    </div>
    
</section>
