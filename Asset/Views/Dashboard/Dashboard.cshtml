@{
    ViewBag.Title = "Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <style>
        /* Base styles for the entire page */
        body {
            margin: 0;
            padding: 0;
            font-family: 'Inter', sans-serif;
            background-color: #F0F0F0;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        /* Styles for the container */
        .container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }

        /* Styles for the rectangular boxes */
        .rectangle {
            width: 200px;
            height: 150px;
            margin: 20px;
            background: linear-gradient(135deg, #132F65, #1E3A8A);
            color: #fff;
            text-align: center;
            padding: 10px;
            border-radius: 10px;
            position: relative;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            cursor: pointer;
        }

            .rectangle:hover {
                transform: scale(1.05);
            }

        /* Styles for the dropdown arrow */
        .dropdown-arrow {
            width: 0;
            height: 0;
            border-left: 8px solid transparent;
            border-right: 8px solid transparent;
            border-top: 8px solid #EAE221;
            margin: 0 auto;
        }

        /* Styles for the dropdown options */
        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #fff;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
            z-index: 1;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
        }

        .rectangle:hover .dropdown-content {
            display: block;
        }

        .dropdown-content a {
            padding: 10px;
            display: block;
            color: #132F65;
            text-align: center;
            text-decoration: none;
            transition: background-color 0.2s;
        }

            .dropdown-content a:hover {
                background-color: #EAE221;
            }

        /* Additional styles for Welcome */
        .Welcome {
            font-size: 50px;
            font-weight: 700;
            font-family: 'Times New Roman', Times, serif;
            color: #132F65;
            margin-top: 20px;
        }

        /* Additional styles for the top center position */
        .top-center {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            height: 20vh;
        }

    </style>
</head>
<body>
    <div class="top-center">
        <div class="Welcome">
            Welcome, @* @Model.Name! *@
        </div>
    </div>

    <div class="container">
        <div class="rectangle">
            <div class="dropdown-arrow"></div>
            <div class="dropdown-content">
                <a href="@Url.Action("CreateAsset", "AssetManagement")">Create Asset</a>
                <a href="@Url.Action("ViewAssets", "AssetManagement")">View Assets</a>
                <!-- Add more functions and links as needed -->
            </div>
            Asset Management
        </div>

        <div class="rectangle">
            <div class="dropdown-arrow"></div>
            <div class="dropdown-content">
                <a href="@Url.Action("CreateVendor", "VendorManagement")">Create Vendor</a>
                <a href="@Url.Action("ViewVendors", "VendorManagement")">View Vendors</a>
                <!-- Add more functions and links as needed -->
            </div>
            Vendor Management
        </div>

        <div class="rectangle">
            <div class="dropdown-arrow"></div>
            <div class="dropdown-content">
                <a href="@Url.Action("CreatePurchase", "PurchaseManagement")">Create Purchase</a>
                <a href="@Url.Action("ViewPurchases", "PurchaseManagement")">View Purchases</a>
                <a href="@Url.Action("CreateAssetTransfer", "PurchaseManagement")">Create Asset Transfer</a>
                <!-- Add more functions and links as needed -->
            </div>
            Purchase Management
        </div>

        <div class="rectangle">
            <div class="dropdown-arrow"></div>
            <div class="dropdown-content">
                <a href="@Url.Action("CreateSale", "SalesManagement")">Create Sale</a>
                <a href="@Url.Action("ViewSales", "SalesManagement")">View Sales</a>
                <!-- Add more functions and links as needed -->
            </div>
            Sales Management
        </div>

        <div class="rectangle">
            <div class="dropdown-arrow"></div>
            <div class="dropdown-content">
                <a href="@Url.Action("BranchWiseStock", "StockDetails")">Branch Wise Stock</a>
                <a href="@Url.Action("AssetWiseStock", "StockDetails")">Asset Wise Stock</a>
                <a href="@Url.Action("AssetSectionWiseStock", "StockDetails")">Asset Section Wise Stock</a>
                <a href="@Url.Action("AssetSubSectionWiseStock", "StockDetails")">Asset Sub Section Wise Stock</a>
                <!-- Add more functions and links as needed -->
            </div>
            Stock Details
        </div>

        <div class="rectangle">
            <div class="dropdown-arrow"></div>
            <div class="dropdown-content">
                <a href="@Url.Action("AssetTransactionList", "Reports")">Asset Transaction List</a>
                <a href="@Url.Action("PurchaseAmountWise", "Reports")">Purchase Amount Wise</a>
                <!-- Add more functions and links as needed -->
            </div>
            Reports
        </div>
    </div>

    <!-- Add more elements as needed -->

</body>
</html>



